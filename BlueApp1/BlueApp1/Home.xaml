<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlueApp1.Home" BackgroundColor="#fff" NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>




            <Frame Padding="0" BackgroundColor="#75AE94" CornerRadius="20" Margin="4"   >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="90" />
                    </Grid.ColumnDefinitions>
                    <Label Text="جهاز تحكم عن بعد فائق"
                                   Grid.Column="0" 
                                   LineBreakMode="WordWrap"
                                   TextColor="White"
                                   VerticalOptions="CenterAndExpand"
                                   HorizontalOptions="Center"  />
                    <Button Text="" x:Name="ConnectBtn"
                                    Grid.Column="1"
                                    BackgroundColor="#75AE94"
                            Clicked="Checkconnect"
                                    TextColor="White"   />
                </Grid>
            </Frame>


            <ScrollView>
                <StackLayout>

                    <Grid Padding="5" ColumnSpacing="0" RowSpacing="2" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <!-- -->
                        <Button Text="لوحات التحكم" x:Name="ControlMenu" BackgroundColor="#75AE94" Clicked="opneControl"  Grid.Row="0"  TextColor="White" />
                        <Image  Grid.Column="1" BackgroundColor="#75AE94" Source="pincode_keyboard" Grid.Row="0" />
                        <!-- -->
                        <Button Text="مشروع جديد"  BackgroundColor="#75AE94" Clicked="AddNewProject"  Grid.Row="1"  TextColor="White" />
                        <Image  Grid.Column="1" BackgroundColor="#75AE94" Source="control" Grid.Row="1" />
                        <!-- -->
                        <Button Text="الاعداد"  BackgroundColor="#75AE94" Clicked="GetDataFromUart"  Grid.Row="2"  TextColor="White" />
                        <Image  Grid.Column="1" BackgroundColor="#75AE94" Source="control" Grid.Row="2" />
            
                    </Grid>
                </StackLayout>
            </ScrollView>
          
            

            <Label BackgroundColor="Transparent" TextColor="Black" x:Name="Notes" Text="" VerticalOptions="EndAndExpand" HorizontalTextAlignment="Center" Margin="5"  />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>